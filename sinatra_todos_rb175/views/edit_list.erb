<section id="todos">
  <header>
    <h2>Editing '<%= @list[:name] %>'</h2>
    <ul>
    <li>
      <form class="delete" action="/lists/<%= params[:id] %>/delete" method="POST">
        <button class="delete" type="submit">Delete List</button>
      </form>
    </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= params[:id] %>" method="POST">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list "<%= @list[:name] %>":</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>"> <!-- shows the last value entered in the input field if there was one. Otherwise shows the current name of the list -->
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>